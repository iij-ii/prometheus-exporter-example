cabal-version: 2.4

name:           prometheus-exporter
version:        0.1.0.0
description:    Please see the README on GitHub at <https://github.com/igrep/prometheus-exporter#readme>
homepage:       https://github.com/igrep/prometheus-exporter#readme
bug-reports:    https://github.com/igrep/prometheus-exporter/issues
author:         Yuji Yamamoto
maintainer:     whosekiteneverfly@gmail.com
copyright:      2019 Yuji Yamamoto
license:        BSD-3-Clause
license-file:   LICENSE
build-type:     Simple
extra-source-files:
    README.md
    ChangeLog.md

source-repository head
  type: git
  location: https://github.com/igrep/prometheus-exporter

